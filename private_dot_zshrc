#$(brew --prefix asdf)/libexec/asdf.sh

# doom-emacs
export PATH=$PATH:/Users/yeongshengtan/.emacs.d/bin

# flutter dev
export FLUTTER="fvm flutter"
export PATH="$HOME/fvm/default/bin:$PATH"
# export JAVA_HOME="/Users/yeongshengtan/Library/Java/JavaVirtualMachines/azul-11.0.18/Contents/Home"

# Gigalixir
export PATH=$PATH:$(python3.11 -m site --user-base)/bin

# rtx
eval "$(/opt/homebrew/bin/rtx activate zsh)"

# ANDROID
export ANDROID_HOME=$HOME/Library/Android/sdk

