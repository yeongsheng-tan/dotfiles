background-opacity = 0.9
mouse-hide-while-typing = true

[keybindings]
# Bind fn + left-arrow (Home key) to beginning of line
"Home" = "SendChars \\x1bOH"

# Bind fn + right-arrow (End key) to end of line
"End" = "SendChars \\x1bOF"

# Bind Alt + Left to backward word
"Alt+Left" = "SendChars \\x1bb"

# Bind Alt + Right to forward word
"Alt+Right" = "SendChars \\x1bf"

